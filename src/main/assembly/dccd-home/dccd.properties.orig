# DCCD properties 
#
# The default location of this file is 
# /opt/dccd-home/dccd.properties
#
# The conf directory can also be placed 
# at another location, 
# then the variable 
# "dccd.home" should be set 
# to something other than "/opt/dccd-home"
# for tomcat this can be one in 
# /etc/tomcat5/tomcat5.conf
########################################

# Fedora
fedora.protocol=http
fedora.host=localhost
fedora.port=8080
fedora.context=fedora
fedora.user=fedoraAdmin
fedora.password=###Fill-In-fedoraAdmin-password###

# Solr
solr.url=http://localhost:8080/solr
###
solr.protocol=http
solr.host=localhost
solr.port=8080
solr.context=solr/dendro/select
solr.context.update=solr/dendro/update

# LDAP
ldap.url=ldap://localhost:389
#ldap.securityPrincipal=cn=Manager,dc=dans,dc=knaw,dc=nl
ldap.securityPrincipal=cn=ldapadmin,dc=dans,dc=knaw,dc=nl
ldap.securityCredentials=###Fill-In-ldapadmin-password###

# Mail
mail.smtp.host=###Fill-In-host###
mail.fromAddress=###Fill-In-email###

# JSON cache files created by cron jobs
geolocation.organisations=/opt/dccd-home/data/geolocation_organisations.json
project.categories.path=/opt/dccd-home/data/dccd_project_categories.json

